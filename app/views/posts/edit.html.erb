<h3>Editing Post</h3>
<%= form_for :post, url: post_path(@post.id), method: :patch do |f| %>
  <p>
    <%= f.label :Title %><br>
    <%= f.text_field :Title %>
  </p>
 
  <p>
    <%= f.label :Comment %><br>
    <%= f.text_area :Comment %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', posts_path %>
